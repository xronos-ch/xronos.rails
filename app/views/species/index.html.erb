<div class="container">
  <%= render 'shared/notice' %>

  <h1>Species</h1>

  <table class="responsive nowrap table table-hover" id="dttb-species" data-sort="true" data-source="<%= url_for(format: :json)%>">
    <thead>
      <tr>
        <th data-data="name">Name</th>
        <th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px"></th>
      </tr>
    </thead>

  </table>

  <br>

  <%= link_to 'New species', new_species_path, class: 'btn btn-secondary' %>
</div>
