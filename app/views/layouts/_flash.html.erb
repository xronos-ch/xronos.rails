<div class="toast <%= flash_type == "alert" ? "bg-warning" : "bg-success" %> text-white border-0" 
     data-controller="flash" 
     role="<%= flash_type == "alert" ? "alert" : "status" %>" 
     aria-live="<%= flash_type == "alert" ? "assertive" : "polite" %>" 
     aria-atomic="true">
  <div class="d-flex">
    <div class="toast-body">
      <%= flash_type == "alert" ? (bs_icon "robot") : (bs_icon "check-lg") %>
      <%= message %>
    </div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
</div>
