<%= form_with(model: arch_object, local: true) do |f| %>
  <% if arch_object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(arch_object.errors.count, "error") %> prohibited this arch_object from being saved:</h2>

      <ul>
      <% arch_object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :site_phase %>
    <div class="field">
      <%= f.collection_select :site_phase_id, SitePhase.all, :id, :name, { include_blank: 'Create new' }, {:class => "observed_select"} %>
    </div>
    <div class="field">
      <div id='site_phase'>
        <%= f.fields_for :site_phase, @arch_object.site_phase do |site_phase| %>
          <%= render 'site_phases/site_phase_fields', :f => site_phase %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="field">
    <b><%= f.label :material %></b>
    <div class="field">
      <%= f.collection_select :material_id, Material.all, :id, :name, { include_blank: 'Create new' }, {:class => "observed_select"} %>
    </div>
    <div class="field">
      <%= f.fields_for :material, @arch_object.material do |material| %>
        <%= f.label :name %>
        <%= material.text_field :name, placeholder: 'New material' %>
      <% end %>
    </div>
  </div>

  <div class="field">
    <b><%= f.label :species %></b>
    <div class="field">
      <%= f.collection_select :species_id, Species.all, :id, :name, { include_blank: 'Create new' }, {:class => "observed_select"} %>
    </div>
    <div class="field">
      <%= f.fields_for :species, @arch_object.species do |species| %>
        <%= f.label :name %>
        <%= species.text_field :name, placeholder: 'New species' %>
      <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :on_site_object_position %>
    <div class="field">
      <%= f.collection_select :on_site_object_position_id, SitePhase.all, :id, :name, { include_blank: 'Create new' }, {:class => "observed_select"} %>
    </div>
    <div class="field">
      <div id='on_site_object_position'>
        <%= f.fields_for :on_site_object_position, @arch_object.on_site_object_position do |on_site_object_position| %>
          <%= render 'on_site_object_positions/on_site_object_position_fields', :f => on_site_object_position %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="field">
    <b>Samples</b>
    <div id='sample'>
      <%= f.fields_for :samples do |sample| %>
        <%= render 'samples/sample_fields_ass', :f => sample %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association 'add sample', f, :samples, partial: 'samples/sample_fields_ass' %>
      </div>
    </div>
  </div>

  <div class="field">
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
