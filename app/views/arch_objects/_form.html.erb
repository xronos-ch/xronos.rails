<%= form_with(model: arch_object, local: true) do |f| %>
  <% if arch_object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(arch_object.errors.count, "error") %> prohibited this arch_object from being saved:</h2>

      <ul>
      <% arch_object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3><%= f.label :site %></h3>
  <div class="field">
    <%= f.collection_select :site_id, Site.all, :id, :name, { include_blank: 'Create new' } %>
  </div>
  <div class="field">
    <%= f.fields_for :site, @arch_object.site do |site| %>
      <%= f.label :name %>
      <%= site.text_field :name, placeholder: 'New site' %>
      <%= f.label :lat %>
      <%= site.text_field :lat, placeholder: 0 %>
      <%= f.label :lng %>
      <%= site.text_field :lng, placeholder: 0 %>
    <% end %>
  </div>

  <p><b><%= f.label :site_type %></b></p>
  <div class="field">
    <%= f.collection_select :site_type_id, SiteType.all, :id, :name, { include_blank: 'Create new' } %>
  </div>
  <div class="field">
    <%= f.fields_for :site_type, @arch_object.site.site_type do |site_type| %>
      <%= f.label :name %>
      <%= site_type.text_field :name, placeholder: 'New site type' %>
      <%= f.label :description %>
      <%= site_type.text_field :description, placeholder: 'Description' %>
    <% end %>
  </div>

  <p><b><%= f.label :country %></b></p>
  <div class="field">
    <%= f.collection_select :country_id, Country.all, :id, :name, { include_blank: 'Create new' } %>
  </div>
  <div class="field">
    <%= f.fields_for :country, @arch_object.site.country do |country| %>
      <%= f.label :name %>
      <%= country.text_field :name, placeholder: 'New country' %>
      <%= f.label :description %>
      <%= country.text_field :abbreviation, placeholder: 'Abbreviation' %>
    <% end %>
  </div>

  <hr>

  <h3><%= f.label :material %></h3>
  <div class="field">
    <%= f.collection_select :material_id, Material.all, :id, :name, { include_blank: 'Create new' } %>
  </div>
  <div class="field">
    <%= f.fields_for :material, @arch_object.material do |material| %>
      <%= f.label :name %>
      <%= material.text_field :name, placeholder: 'New material' %>
    <% end %>
  </div>

  <hr>

  <h3><%= f.label :species %></h3>
  <div class="field">
    <%= f.collection_select :species_id, Species.all, :id, :species %>
  </div>

  <hr>

  <h3><%= f.label :on_site_object_position %></h3>
  <div class="field">
    <%= f.collection_select :on_site_object_position_id, OnSiteObjectPosition.all, :id, :feature %>
  </div>

  <hr>

  <h3>Samples</h3>
  <div id='sample'>
    <%= f.fields_for :samples do |sample| %>
      <%= render 'sample_fields', :f => sample %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add sample', f, :samples %>
    </div>
  </div>

    <%#= s.fields_for :measurements do |m| %>
      <%#= m.label :year %>
      <%#= m.text_field :year %>
      <%#= m.label :labnr %>
      <%#= m.text_field :labnr %>
      <%#= m.label :lab_id %>
      <%#= m.collection_select :lab_id, Lab.all, :id, :name %>
    <%# end %>
  <%# end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
