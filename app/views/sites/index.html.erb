<div class="container">
  <%= render 'shared/notice' %>

  <h1>Sites</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Lat</th>
        <th>Lng</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sites.each do |site| %>
        <tr>
          <td><%= site.name %></td>
          <td><%= site.lat %></td>
          <td><%= site.lng %></td>
          <td><%= link_to 'Show', site %></td>
          <td><%= link_to 'Edit', edit_site_path(site) %></td>
          <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Site', new_site_path %>
</div>
