<%= f.text_control :name %>

<div class="row">
  <%= f.degree_control :lat, label: 'Latitude' %>
  <%= f.degree_control :lng, label: 'Longitude' %>
</div>

<%= f.collection_select :country_id, Country.all, :id, :name, { include_blank: 'Create new' }, {:class => "observed_select"}  %>
<%= f.fields_for :country, Country.new do |country| %>
<%= render 'countries/country_fields', :f => country %>
<% end %>
