<div class="field_master">

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :lat %>
    <%= f.text_field :lat %>
  </div>

  <div class="field">
    <%= f.label :lng %>
    <%= f.text_field :lng %>
  </div>

  <div class="field_master_top">
    <b><%= f.label :country %></b>
  </div>
  <div class="field_master">
    <div class="field">
      <%= f.collection_select :country_id, Country.all, :id, :name, { include_blank: 'Create new' }, {:class => "observed_select"}  %>
    </div>
    <%= f.fields_for :country, Country.new do |country| %>
      <%= render 'countries/country_fields', :f => country %>
    <% end %>
  </div>

  <div class="field_master_top">
    <b><%= f.label :fell_phases %></b>
  </div>
    <div class="field_master">
    <%= f.fields_for :fell_phases do |fell_phase| %>
      <%= render 'fell_phases/fell_phase_fields_ass', :f => fell_phase %>
    <% end %>
    <div class='links'>
      <%= fa_icon "plus" %> <%= link_to_add_association 'add fell_phase', f, :fell_phases, partial: 'fell_phases/fell_phase_fields_ass' %>
    </div>
  </div>

</div>
