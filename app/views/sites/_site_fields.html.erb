<div class="field_master">

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :lat %>
    <%= f.text_field :lat %>
  </div>

  <div class="field">
    <%= f.label :lng %>
    <%= f.text_field :lng %>
  </div>

  <div class="field">
    <b><%= f.label :country %></b>
    <div class="field">
      <%= f.collection_select :country_id, Country.all, :id, :name, { include_blank: 'Create new' }, {:class => "observed_select"} %>
    </div>
    <div class="field">
      <%= f.fields_for :country, Country.new do |country_fields| %>
        <%= country_fields.label :name %>
        <%= country_fields.text_field :name, placeholder: 'New country' %>
        <%= country_fields.label :description %>
        <%= country_fields.text_field :abbreviation, placeholder: 'Abbreviation' %>
      <% end %>
    </div>
  </div>

</div>
