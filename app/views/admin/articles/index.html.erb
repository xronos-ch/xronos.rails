<h2>Manage articles</h2>

<% if can? :create, Article %>
  <%= link_to 'New article', new_admin_article_path, class: 'btn btn-outline-primary' %>
<% end %>

<section class="my-5">
  <h2>News posts</h2>
  <%= render "table", articles: @news %>
</section>

<section class="my-5">
  <h2>About pages</h2>
  <%= render "table", articles: @about %>
</section>

<section class="my-5">
  <h2>Documentation</h2>
  <%= render "table", articles: @docs %>
</section>
