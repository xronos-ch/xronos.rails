<li class="nav-item dropdown">
<a class="nav-link dropdown-toggle" 
id="dataDownload"  
role="button" 
data-bs-toggle="dropdown" 
aria-expanded="false" 
href="#">
<%= bs_icon "download" %>
Download
</a>
<ul class="dropdown-menu" aria-labelledby="dataDownload" style="padding: 0px;">

<!-- C14 Download Options -->
<li class="dropdown-header">C14 Data</li>
<li>
	<div class="row g-0 text-center">
		<!-- C14 CSV -->
		<div class="col">
			<%= link_to data_path(format: :csv, filter: @c14_filter_params, type: :c14), 
			class: "nav-link", 
				title: "C14 CSV",
				download: "c14_data_#{Date.today}.csv" do %>
					<%= bs_icon("bi bi-filetype-csv") %> CSV
					<% end %>
				</div>
				<!-- C14 JSON -->
				<div class="col">
					<%= link_to data_path(format: :json, filter: @c14_filter_params, type: :c14), 
					class: "nav-link", 
						title: "C14 JSON",
						download: "c14_data_#{Date.today}.json" do %>
							<%= bs_icon("bi bi-filetype-json") %> JSON
							<% end %>
						</div>
					</div>
				</li>

				<hr class="dropdown-divider">

				<!-- Dendro Download Options -->
				<li class="dropdown-header">Dendro Data</li>
				<li>
					<div class="row g-0 text-center">
						<!-- Dendro CSV -->
						<div class="col">
							<%= link_to data_path(format: :csv, filter: @dendro_filter_params, type: :dendro), 
							class: "nav-link", 
								title: "Dendro CSV",
								download: "dendro_data_#{Date.today}.csv" do %>
									<%= bs_icon("bi bi-filetype-csv") %> CSV
									<% end %>
								</div>
								<!-- Dendro JSON -->
								<div class="col">
									<%= link_to data_path(format: :json, filter: @dendro_filter_params, type: :dendro), 
									class: "nav-link", 
										title: "Dendro JSON",
										download: "dendro_data_#{Date.today}.json" do %>
											<%= bs_icon("bi bi-filetype-json") %> JSON
											<% end %>
										</div>
									</div>
								</li>

							</ul>
						</li>
					</ul>
				</div>
