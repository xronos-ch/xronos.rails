<div class="d-flex">

	<h1 class="h5 my-0 me-3 px-3 py-2 text-primary fw-bold">
		<%= bs_icon "hourglass-split" %>
		Data browser
	</h1>

	<button class="me-3 btn btn btn-outline-primary"
	type="button"
	data-bs-toggle="collapse"
	data-bs-target="#dataFilters"
	aria-expanded="true"
	aria-controls="dataFilters">
	<%= bs_icon "filter" %>
	Filters
	<span class="collapse-status-open"><%= bs_icon "chevron-left" %></span>
	<span class="collapse-status-closed"><%= bs_icon "chevron-right" %></span>
</button>

<div class="px-3 py-2 text-muted">
	View:
</div>
<ul class="me-3 nav nav-pills" role="tablist">
	<li class="nav-item" role="presentation">
		<a id="dataMapTab"
		class="nav-link active"
		data-bs-toggle="pill"
		href="#dataMap"
		role="tab"
		aria-controls="dataMap"
		aria-selected="true">
		<%= bs_icon "pin-map-fill" %>
		Sites
	</a>
</li>
<li class="nav-item" role="presentation">
	<a id="dataTableTab" 
	class="nav-link" 
	data-bs-toggle="pill" 
	href="#dataTable"
	role="tab" 
	aria-controls="dataTable"
	aria-selected="false">
	<%= bs_icon "table" %>
	Radiocarbon Dates
</a>
</li>
<li class="nav-item" role="presentation">
<a id="dendroTableTab" 
class="nav-link" 
data-bs-toggle="pill" 
href="#dendroTable"
role="tab" 
aria-controls="dendroTable"
aria-selected="false">
<%= bs_icon "table" %>
Dendro Data
</a>
</li>
</ul>

<span class="navbar-text me-3">
<%= render "filter_status" %>
</span>

