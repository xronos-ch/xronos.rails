<% disabled ||= false  
#We do this so if disabled is not passed to the partial it doesn't crash. 
# We default it to false 
%>

<div class="row">
<%= f.number_control :bp, class: "form-control", disabled: disabled %>
<%= f.number_control :std, class: "form-control", disabled: disabled %>
</div>

<div class="row">
<%= f.number_control :cal_bp, class: "form-control", disabled: disabled %>
<%= f.number_control :cal_std, class: "form-control", disabled: disabled %>
</div>

<div class="row">
<%= f.text_control :delta_c13, class: "form-control", disabled: disabled %>
<%= f.text_control :delta_c13_std, class: "form-control", disabled: disabled %>
</div>

<%= f.text_control :method, class: "form-control", disabled: disabled %>

<%= f.collection_select :source_database_id, SourceDatabase.all, :id, :name, { include_blank: 'Create new' }, {:class => "observed_select form-select", disabled: disabled}  %>

<div class="row">
<%= f.fields_for :source_database, :include_id => false do |source_database| %>
  <%= render 'source_databases/source_database_fields', :f => source_database %>
<% end %>
</div>

