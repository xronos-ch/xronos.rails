<div class="container">
  <%= render 'shared/notice' %>

  <h1>Labs</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @labs.each do |lab| %>
        <tr>
          <td><%= lab.name %></td>
          <td><%= lab.active %></td>
          <td><%= link_to 'Show', lab %></td>
          <td><%= link_to 'Edit', edit_lab_path(lab) %></td>
          <td><%= link_to 'Destroy', lab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Lab', new_lab_path, class: 'btn btn-secondary' %>
</div>
