<% disabled ||= false  
#We do this so if disabled is not passed to the partial it doesn't crash. 
# We default it to false 
%>

<div class="row">
  <div class="col">

    <div class="form-group">
      <%= f.label :name, "Lab Name", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", disabled: disabled %>
    </div>

    <div class="form-group">
      <%= f.label :active %>
      <%= f.check_box :active, disabled: disabled %>
    </div>
  </div>
</div>



