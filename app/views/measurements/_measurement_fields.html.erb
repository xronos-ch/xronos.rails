<div class="field">
  <%= f.label :year %>
  <%= f.number_field :year %>
</div>

<div class="field">
  <%= f.label :labnr %>
  <%= f.number_field :labnr %>
</div>

<h3><%= f.label :c14_measurement %></h3>
<div class="field">
  <%= f.collection_select :c14_measurement_id, C14Measurement.all, :id, :id, { include_blank: 'Create new' } %>
</div>
<div class="field">
  <%= f.fields_for :c14_measurement, f.object.c14_measurement || C14Measurement.new do |c14_measurement_fields| %>
    <%= c14_measurement_fields.label :bp %>
    <%= c14_measurement_fields.text_field :bp %>
    <%= c14_measurement_fields.label :std %>
    <%= c14_measurement_fields.text_field :std %>
    <%= c14_measurement_fields.label :cal_bp %>
    <%= c14_measurement_fields.text_field :cal_bp %>
    <%= c14_measurement_fields.label :cal_std %>
    <%= c14_measurement_fields.text_field :cal_std %>
    <%= c14_measurement_fields.label :delta_c13 %>
    <%= c14_measurement_fields.text_field :delta_c13 %>
    <%= c14_measurement_fields.label :delta_c13_std %>
    <%= c14_measurement_fields.text_field :delta_c13_std %>
    <%= c14_measurement_fields.label :method %>
    <%= c14_measurement_fields.text_field :method %>
  <% end %>
</div>

<h3><%= f.label :lab %></h3>
<div class="field">
  <%= f.collection_select :lab_id, Lab.all, :id, :name, { include_blank: 'Create new' } %>
</div>
<div class="field">
  <%= f.fields_for :lab, f.object.c14_measurement || Lab.new do |lab_fields| %>
    <%= lab_fields.label :name %>
    <%= lab_fields.text_field :name %>
    <%= lab_fields.label :active %>
    <%= lab_fields.check_box :active %>
  <% end %>
</div>
