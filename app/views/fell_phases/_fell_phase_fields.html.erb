<div class="field_master">

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.number_field :start_time %>
  </div>

  <div class="field">
    <%= f.label :end_time %>
    <%= f.number_field :end_time %>
  </div>

  <div class="field_master_top">
    <b><%= f.label :references %></b>
  </div>
    <div class="field_master">
    <%= f.fields_for :references do |reference| %>
      <%= render 'references/reference_fields_ass', :f => reference %>
    <% end %>
    <div class='links'>
      <%= fa_icon "plus" %> <%= link_to_add_association 'add reference', f, :references, partial: 'references/reference_fields_ass' %>
    </div>
  </div>

</div>
