<%= bootstrap_form_with(model: @source_database, local: true, id: "sourceDatabaseForm") do |f| %>

  <%= render 'fields', f: f %>

  <%= content_for :buttons do %>
    <%= button_tag "Cancel", type: 'reset', class: 'btn btn-danger', form: "sourceDatabaseForm", data: { "bs-dismiss": "modal" } %>
    <%= button_tag "Save", class: 'btn btn-success', form: "sourceDatabaseForm" %>
  <% end %>

<% end %>

