<h2 class="h5">Profile photo</h2>

<% if @user_profile.photo.attached? %>
  <%= image_tag @user_profile.photo.variant(:thumb),
    class: "mb-3",
    style: "border-radius: 50%" %>

  <div class="mb-3">
    <%= link_to "Remove photo",
      user_profile_photo_path(@user_profile),
      class: "btn btn-outline-danger",
      data: { turbo_method: :delete } %>
  </div>
<% end %>

<%= form.file_field :photo,
  label: "Upload new photo",
  help: "Up to 5 megabytes in size",
  accept: ActiveStorage.variable_content_types.join(",") %>

<h2 class="h5 mt-5">Your details</h2>

<%= form.text_field :full_name, 
  help: 'Your name will be used to <strong>publicly</strong> attribute your contributions. You can change it at any time.'.html_safe,
  required: true %>

<%= form.text_field :orcid,
  label: "ORCID",
  help: '<a href="https://info.orcid.org/what-is-orcid/">What is ORCID</a>?'.html_safe
%>

<%= form.email_field :public_email %>

<%= form.url_field :url, label: "URL" %>

