<div class="container">
  <%= render 'shared/notice' %>

  <h1>Measurement States</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @measurement_states.each do |measurement_state| %>
        <tr>
          <td><%= measurement_state.name %></td>
          <td><%= link_to 'Show', measurement_state %></td>
          <td><%= link_to 'Edit', edit_measurement_state_path(measurement_state) %></td>
          <td><%= link_to 'Destroy', measurement_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Measurement State', new_measurement_state_path %>
</div>
