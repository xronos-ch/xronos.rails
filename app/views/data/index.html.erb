<div style="z-index: -1">
<table id="selected_measurements-datatable" class="compact row-border hover" data-source="<%= root_path(format: :json) %>" style="width: 100%">
	<thead>
		<tr>
			<th></th>
			<th>labnr</th>
			<th>bp</th>
			<th>std</th>
			<th>cal_bp</th>
			<th>cal_std</th>
			<th>site</th>
			<th>period</th>
			<th>material</th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>
</div>

<div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="filterDataOffcanvas" aria-labelledby="offcanvasScrollingLabel">
  <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasScrollingLabel">
      Filter Data
    </h5>
    <div class="clearfix">
      <button class="btn btn-light pull-right" type="button" data-bs-toggle="offcanvas" data-bs-target="#filterDataOffcanvas" aria-controls="filterDataOffcanvas" id="button_close_filter_data"><%= fa_icon "close" %></button>
    </div>
  </div>
  <!-- #### Filter #### -->
  <%= render "filter" %>
</div>

<button class="btn btn-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#filterDataOffcanvas" aria-controls="filterDataOffcanvas" id="button_filter_data">
<%= fa_icon "search" %>Toggle data filter</button>
