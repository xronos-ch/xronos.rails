<form class="input-group mb-3" 
      role="search"
      action="<%= search_action || "/search" %>"
      method="get">

  <input class="form-control form-control-lg"
         type="search" 
         name="q" 
         placeholder="<%= search_placeholder %>"
         aria-label="Search">
  <button class="btn btn-lg btn-primary" type="submit">
    <%= bs_icon "search" %>
    Search
  </button>

</form>
