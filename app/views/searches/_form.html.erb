<form class="input-group mb-3" 
      role="search"
      action="/search"
      method="get">

  <input class="form-control form-control-lg"
         type="search" 
         name="q" 
         placeholder="Site name, radiocarbon lab ID, ..." 
         aria-label="Search">
  <button class="btn btn-lg btn-primary" type="submit">
    <%= fa_icon "search", text: "Search" %>
  </button>

</form>
